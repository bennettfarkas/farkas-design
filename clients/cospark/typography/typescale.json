{
  "fonts": {
    "sans": {
      "family": "DM Sans",
      "role": "Headings, navigation, labels, buttons, captions, UI elements",
      "weights": [300, 400, 500, 700, 900],
      "source": "https://fonts.google.com/specimen/DM+Sans"
    },
    "serif": {
      "family": "Source Serif 4",
      "role": "Body text, descriptions, long-form reading",
      "weights": [300, 400, 600, 700],
      "opticalSizing": true,
      "source": "https://fonts.google.com/specimen/Source+Serif+4"
    }
  },
  "scale": {
    "screen": {
      "hero": {
        "font": "DM Sans",
        "size": "clamp(3.5rem, 10vw, 7rem)",
        "weight": 700,
        "letterSpacing": "0.05em",
        "lineHeight": "0.9",
        "textTransform": "uppercase"
      },
      "display": {
        "font": "DM Sans",
        "size": "clamp(2.5rem, 6vw, 4rem)",
        "weight": 900,
        "letterSpacing": "-0.03em",
        "lineHeight": "0.95"
      },
      "h1": {
        "font": "DM Sans",
        "size": "clamp(2rem, 3.5vw, 2.5rem)",
        "weight": 900,
        "letterSpacing": "-0.02em",
        "lineHeight": "1.0"
      },
      "h2": {
        "font": "DM Sans",
        "size": "1.5rem",
        "weight": 900,
        "letterSpacing": "0.04em",
        "lineHeight": "1.1",
        "textTransform": "uppercase"
      },
      "h3": {
        "font": "DM Sans",
        "size": "1.125rem",
        "weight": 700,
        "lineHeight": "1.2"
      },
      "subtitle": {
        "font": "DM Sans",
        "size": "1.5rem",
        "weight": 300,
        "letterSpacing": "-0.01em",
        "lineHeight": "1.3"
      },
      "section": {
        "font": "DM Sans",
        "size": "1.25rem",
        "weight": 600,
        "letterSpacing": "-0.01em",
        "lineHeight": "1.2"
      },
      "body": {
        "font": "Source Serif 4",
        "size": "1rem",
        "weight": 400,
        "lineHeight": "1.6",
        "maxWidth": "60–70ch"
      },
      "small": {
        "font": "Source Serif 4",
        "size": "0.875rem",
        "weight": 400,
        "lineHeight": "1.5"
      },
      "caption": {
        "font": "DM Sans",
        "size": "0.75rem",
        "weight": 500,
        "letterSpacing": "0.03em",
        "lineHeight": "1.4",
        "textTransform": "uppercase"
      },
      "label": {
        "font": "DM Sans",
        "size": "0.7rem",
        "weight": 500,
        "letterSpacing": "0.08em",
        "lineHeight": "1.4",
        "textTransform": "uppercase"
      },
      "meta": {
        "font": "DM Sans",
        "size": "0.65rem",
        "weight": 500,
        "letterSpacing": "0.06em",
        "lineHeight": "1.4",
        "textTransform": "uppercase"
      }
    },
    "print": {
      "hero": {
        "font": "DM Sans",
        "size": "72pt",
        "leading": "72pt",
        "weight": 700,
        "tracking": "+50",
        "textTransform": "uppercase"
      },
      "display": {
        "font": "DM Sans",
        "size": "48pt",
        "leading": "52pt",
        "weight": 900,
        "tracking": "-30"
      },
      "h1": {
        "font": "DM Sans",
        "size": "28pt",
        "leading": "32pt",
        "weight": 900,
        "tracking": "-20"
      },
      "h2": {
        "font": "DM Sans",
        "size": "16pt",
        "leading": "20pt",
        "weight": 900,
        "tracking": "+40",
        "textTransform": "uppercase"
      },
      "h3": {
        "font": "DM Sans",
        "size": "12pt",
        "leading": "16pt",
        "weight": 700
      },
      "body": {
        "font": "Source Serif 4",
        "size": "11pt",
        "leading": "16pt",
        "weight": 400,
        "maxWidth": "60–70 characters"
      },
      "small": {
        "font": "Source Serif 4",
        "size": "9.5pt",
        "leading": "13pt",
        "weight": 400
      },
      "caption": {
        "font": "DM Sans",
        "size": "8pt",
        "leading": "10pt",
        "weight": 500,
        "textTransform": "uppercase"
      }
    }
  },
  "textColor": {
    "primary": { "light": "Slate 900 (#11202A)", "dark": "Slate 50 (#EDF2F7)" },
    "secondary": { "light": "Slate 700 (#394B5A)", "dark": "Slate 200 (#BDC9D5)" },
    "tertiary": { "light": "Slate 500 (#697B8C)", "dark": "Slate 400 (#8395A5)" },
    "disabled": { "light": "Slate 300 (#9FAFBE)", "dark": "Slate 700 (#394B5A)" }
  },
  "guidelines": {
    "minBodySize": { "screen": "16px (1rem)", "print": "10pt" },
    "headlineLineHeight": "0.9–1.2",
    "bodyLineHeight": "1.5–1.6",
    "financialFigures": "DM Sans Bold 700, tabular numerals",
    "legalMinimum": "Caption (0.75rem)",
    "maxLineLength": "60–70 characters",
    "noMixingRule": "Never mix typefaces within the same line"
  }
}
